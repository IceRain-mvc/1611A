/* pages/day11/index.wxss */

.scrollView {
  height: 250rpx;
  white-space: nowrap;
}

.item {
  margin: 20rpx;
  border-radius: 20rpx;
  width: 400rpx;
  height: 200rpx;
  display: inline-block;
}

.select {
  border: 10rpx solid black;
}

.normal {
  border: 10rpx solid transparent;
}

.card {
  display: flex;
  flex-wrap: wrap;
}

.card_item {
  width: 40%;
  margin: 20rpx;
  height: 200rpx;
  position: relative;
}

.add {
  display: inline-block;
  background-color: #ccc;
  width: 100rpx;
  text-align: center;
}

.count {
  position: absolute;
  top: -25rpx;
  right: -25rpx;
  border-radius: 50%;
  background-color: green;
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  color: #fff;
  text-align: center;
}

.card_select {
  border: 4rpx solid green;
}

.card_normal {
  border: 4rpx solid #ccc;
}


.bottom{

  height: 150rpx;
  background-color: #cccccc;
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 100%;
}


.bottom button{
  display: inline-block;
  width: 200rpx;
}